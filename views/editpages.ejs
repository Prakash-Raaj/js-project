<%- include('layouts/head.ejs'); -%>
    <body>
        <div id="container">

        <%- include('layouts/header.ejs'); -%>

        <%- include('layouts/adminNav.ejs'); -%>
        <main >
            <section class="editPages">
                <h2>Edit Pages</h2>
                <table border="1" class="edit-table">
                    <tr>
                        <td>Page</td>
                        <td>Manage</td>
                        <td>Delete</td>
                    </tr>
                    <% pages.forEach(function(page){%>
                        <tr>
                            <td><%= page.title%></td>
                            <td><a href="/editpage/<%= page._id%>">Edit</a></td>
                            <td><a href="/deletepage">Delete</a></td>
                        </tr>
                    <%})%>
                </table>
                
                </section>
            
        </main>
        <%- include('layouts/footer.ejs'); -%>
    </div>  
</body>
</html>